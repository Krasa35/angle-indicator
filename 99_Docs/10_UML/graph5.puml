component [Encoder\n\nOUT:\nangle:\tuint16_t\nIN:\nCommand:\tuint8_t]{
    portin SDA_1
    portin SCL_1
} 

component STM32{
    portout SDA
    portout SCL
    portout CLK_STM1
    portout DT_STM1
