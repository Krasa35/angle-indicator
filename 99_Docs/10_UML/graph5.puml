    portin MISO_STM
    portin MOSI_STM
}

component [PC\n\nIN:\nangle\tfloat]{
    portout Rx_1
    portout Tx_1
}

component [Motor\n\nIN:\n]{
    portout Ap_M
    portout Am_M
    portout Bp_M
    portout Bm_M
}

component [Motor\tdriver\n\nIN:\n]{
    portin Ap_MD
    portin Am_MD
    portin Bp_MD
    portin Bm_MD
    portout CLK_MD
    portout CW_MD
    portout EN_MD
    portout VIN_MD
    portout GND_MD
}

component [Rotary\tPulser\n\n\tIN:\n]{
    portin CLK_RP
    portin DT_RP
    portin SW_RP
    portin VIN_RP
    portin GND_RP
}

component [ACDC\tAdapter\n]{
    portin 12V_A
    portin GND_A
}


component [SD\tCARD\tReader]{
    portout 5V_SD
    portout GND_SD
    portout 3_3V_SD
    portout MOSI_SD
    portout CS_SD
    portout CLK_SD
    portout MISO_SD
    portout GND2_SD
}

